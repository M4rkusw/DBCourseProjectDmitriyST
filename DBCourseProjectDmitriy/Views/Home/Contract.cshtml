@{
	ViewData["Title"] = "Договоры";
}
<div>
	<h2>Договоры</h2>
	<div class="form-check form-switch">
		<input class="form-check-input" type="checkbox" id="flexSwitchCheck">
		<label id="checkLabel" class="form-check-label" for="flexSwitchCheck">На поставку</label>
	</div>

	<table width="100%" class="table table-striped table-hover table-bordered">
		<thead>
			<tr class="head">
				<th scope="col">Id</th>
				<th scope="col">Дата заключения</th>
				<th scope="col">Заключен с</th>
			</tr>
		</thead>
		<tbody></tbody>
	</table>

	<div width="100%" class="buttons">
		<button id="add" type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addModal">Добавить договоры</button>
		<button id="edit" type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addModal" disabled>Изменить</button>
		<button id="delete" type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal" disabled>Удалить договор</button>
	</div>

	<div id="addModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="addModalLabel" aria-hidden="true">
		<div class="modal-dialog" role="document">
			<div class="modal-content">
				<div class="modal-header">
					<h5 class="modal-title">Добавить/Изменить договор</h5>
					<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Закрыть"></button>
				</div>
				<div class="modal-body">
					<form class="needs-validation" novalidate>
						<div class="input-group mb-3">
							<span class="input-group-text">Дата заключения:</span>
							<input type="datetime-local" class="form-control" required id="date" />
							<div class="invalid-feedback">Пожалуйста, введите дату заключения контракта</div>
						</div>
						<div class="input-group mb-3" id="manufacturerSelect">
							<span class="input-group-text">Производитель:</span>
							<select class="form-select" required id="manufacturer">
								<option value="" disabled selected>--Выберите производителя--</option>
							</select>
							<div class="invalid-feedback">Пожалуйста, выберите производителя</div>
						</div>
						<div class="input-group mb-3" id="clientSelect" hidden>
							<span class="input-group-text">Покупатель:</span>
							<select class="form-select" required id="client">
								<option value="" disabled selected>--Выберите покупателя--</option>
							</select>
							<div class="invalid-feedback">Пожалуйста, выберите покупателя</div>
						</div>
						<div class="modal-footer">
							<button id="saveBtn" type="submit" class="btn btn-primary">Добавить/Изменить</button>
							<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Отмена</button>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
	<div id="deleteModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
		<div class="modal-dialog" role="document">
			<div class="modal-content">
				<div class="modal-header">
					<h5 class="modal-title">Удалить договор</h5>
					<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Закрыть"></button>
				</div>
				<div class="modal-body">
					<p>
						Вы точно хотите удалить договор?
					</p>
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Отмена</button>
					<button id="deleteBtn" type="button" class="btn btn-danger" data-bs-dismiss="modal">Удалить</button>
				</div>
			</div>
		</div>
	</div>
	<div width="100%" class="buttons">
		<button id="unload" name="contracts" type="button" class="btn btn-success">Выгрузть договоры в Excel</button>
	</div>
	<div id="unloadInfoModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="unloadInfoModal" aria-hidden="true">
		<div class="modal-dialog" role="document">
			<div class="modal-content">
				<div class="modal-header">
					<h5 class="modal-title">Договоры выгружены</h5>
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-primary" data-bs-dismiss="modal">ОК</button>
				</div>
			</div>
		</div>
	</div>
</div>
<script src="~/js/contract.js" asp-append-version="true"></script>